<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5"
    tools:context=".LevelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:clickable="true"
                android:contentDescription="Kembali"
                android:focusable="true"
                android:src="@drawable/back2"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />


            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="About Points"
                android:textColor="#002966"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Tingkat Label -->
        <TextView
            android:id="@+id/tier_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="16dp"
            android:background="#E0F7FA"
            android:padding="8dp"
            android:text="Tingkat 1 Prajurit Muda"
            android:textColor="#3D5AFE"
            android:textSize="16sp" />

        <!-- Card Level 1 - Perunggu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Icon Level -->

            <!-- Text Content -->

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="7dp"
                android:contentDescription="Icon Perunggu"
                android:src="@drawable/tamtama" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anggota Muda (Level 1)"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 Points to Anggota Muda"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="70"
                    android:max="100"
                    android:progressTint="#FF8C00" />
            </LinearLayout>
        </LinearLayout>

        <!-- Card Level 2 - Perak -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Icon Level -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/bintara"
                android:layout_marginEnd="16dp"
                android:contentDescription="Icon Perak" />

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anggota Senior
(Level 2)"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 Points to Anggota Utama"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="30"
                    android:max="100"
                    android:progressTint="#C0C0C0" />
            </LinearLayout>
        </LinearLayout>

        <!-- Card Level 3 - Emas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Icon Level -->

            <!-- Text Content -->

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Icon Emas"
                android:src="@drawable/pama" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelatih Muda(Level 3)"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 Points to Anggota Senior "
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="50"
                    android:max="100"
                    android:progressTint="#FFD700" />
            </LinearLayout>
        </LinearLayout>

        <!-- Card Level 4 - Platinum -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <!-- Icon Level -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/bintangsatu"
                android:layout_marginEnd="16dp"
                android:contentDescription="Icon Platinum" />

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pelatih Senior (Level 4)"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promosi ke  Pelatih Muda 2000"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="20"
                    android:max="100"
                    android:progressTint="#E5E4E2" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
