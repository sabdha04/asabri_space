<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <!-- Title -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="FAQ"
            android:textColor="#002966"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:contentDescription="Kembali"
            android:focusable="true"
            android:src="@drawable/back2"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <!-- Question 1 -->
    <LinearLayout
        android:id="@+id/question_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rounded"
        android:elevation="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Question Text -->
            <TextView
                android:id="@+id/question_1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="Apa itu Asabri Space?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Answer Text -->
            <TextView
                android:id="@+id/answer_1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Asabri Space merupakan aplikasi yang dirancang sebagai platform sosial khusus untuk peserta ASABRI yang menggabungkan elemen event hiburan, dan interaksi sosial."
                android:textColor="#555555"
                android:textSize="14sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Icon -->
        <ImageView
            android:id="@+id/question_1_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/dropdown"
            android:contentDescription="Expand/Collapse Question 1" />
    </LinearLayout>

    <!-- Question 2 -->
    <LinearLayout
        android:id="@+id/question_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rounded"
        android:elevation="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Question Text -->
            <TextView
                android:id="@+id/question_2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="Bagaimana cara mendaftar event?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Answer Text -->
            <TextView
                android:id="@+id/answer_2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Buka menu di bagian + terus ke bagian event post lalu isi form tersebut dan klik kirim."
                android:textColor="#555555"
                android:textSize="14sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Icon -->
        <ImageView
            android:id="@+id/question_2_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/dropdown"
            android:contentDescription="Expand/Collapse Question 2" />
    </LinearLayout>

    <!-- Question 3 -->
    <LinearLayout
        android:id="@+id/question_3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rounded"
        android:elevation="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Question Text -->
            <TextView
                android:id="@+id/question_3_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="Bisakah saya membatalkan pendaftaran?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Answer Text -->
            <TextView
                android:id="@+id/answer_3_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Ya, Anda dapat mengajukan pembatalan event di chat admin dengan cara mengajukan ke admin untuk membatalkan event."
                android:textColor="#555555"
                android:textSize="14sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Icon -->
        <ImageView
            android:id="@+id/question_3_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/dropdown"
            android:contentDescription="Expand/Collapse Question 3" />
    </LinearLayout>

    <!-- Question 4 -->
    <LinearLayout
        android:id="@+id/question_4_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rounded"
        android:elevation="4dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Question Text -->
            <TextView
                android:id="@+id/question_4_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="Bagaimana jika ada masalah?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Answer Text -->
            <TextView
                android:id="@+id/answer_4_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Jika Anda mengalami masalah, hubungi admin ada di profile."
                android:textColor="#555555"
                android:textSize="14sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Icon -->
        <ImageView
            android:id="@+id/question_4_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/dropdown"
            android:contentDescription="Expand/Collapse Question 4" />
    </LinearLayout>

</LinearLayout>
