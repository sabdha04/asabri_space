                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+20\nEvent 5"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

            </LinearLayout>
