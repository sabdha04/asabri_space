<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".barter">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="291dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/item_image_1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Gambar Barang 1"
                android:scaleType="centerCrop"
                android:src="@drawable/senter" />

            <TextView
                android:id="@+id/item_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nama Barang: senter"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Deskripsi: Ini adalah deskripsi barang 1." />

            <TextView
                android:id="@+id/item_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga: Rp 100.000"
                android:textColor="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/button_barter_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="291dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_image_2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="Gambar Barang 2"
                android:scaleType="centerCrop"
                android:src="@drawable/barbel"/>

            <TextView
                android:id="@+id/item_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nama Barang: barbel"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_description_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Deskripsi: Ini adalah deskripsi barang 2." />

            <TextView
                android:id="@+id/item_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga: Rp 200.000"
                android:textColor="@android:color/holo_green_dark" />

            <Button
                android:id="@+id/button_barter_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barter" />

        </LinearLayout>

        <!-- Tambahkan lebih banyak LinearLayout di sini untuk item tambahan -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>